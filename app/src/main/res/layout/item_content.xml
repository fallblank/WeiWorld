<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white_overlay">

    <LinearLayout
        android:id="@+id/weibo_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <!--显示用户信息-->
        <LinearLayout
            android:id="@+id/user_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_profile"
                android:layout_width="@dimen/user_profile_size"
                android:layout_height="@dimen/user_profile_size"
                android:layout_marginRight="16dp"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true"
                fresco:actualImageScaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/user_info_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_profile_size"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="fallblank"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/user_profile_name"/>

                <TextView
                    android:id="@+id/weibo_timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2017-4-5"
                    android:textColor="@color/colorTextPrimaryLighter"/>
            </LinearLayout>


        </LinearLayout>

        <!--显示微博文字信息部分-->
        <TextView
            android:id="@+id/weibo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"/>
        <!--微博选项内容部分-->
        <FrameLayout
            android:id="@+id/webo_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>

        <!--显示微博转发、评论、点赞等信息-->
        <LinearLayout
            android:id="@+id/func_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="转发"
                android:textColor="@color/colorTextPrimary"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="评论"
                android:textColor="@color/colorTextPrimary"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="点赞"
                android:textColor="@color/colorTextPrimary"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

