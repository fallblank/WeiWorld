<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="me.fallblank.weiworld.ui.LoginActivity">


    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_button_shape"
        android:text="@string/login"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_register"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_register"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btn_register"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_button_shape"
        android:text="@string/register"
        tools:layout_conversion_absoluteX="92dp"
        tools:layout_conversion_absoluteY="414dp"
        tools:layout_conversion_absoluteWidth="200dp"
        tools:layout_conversion_absoluteHeight="48dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_forgot"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tv_forgot"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_forgot"/>

    <TextView
        android:id="@+id/tv_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:text="@string/forgot_password"
        android:textColor="#0000ff"
        tools:layout_conversion_absoluteX="136dp"
        tools:layout_conversion_absoluteY="478dp"
        tools:layout_conversion_absoluteWidth="112dp"
        tools:layout_conversion_absoluteHeight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
